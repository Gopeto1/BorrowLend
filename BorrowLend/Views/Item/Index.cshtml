@{
    @model IEnumerable<BorrowLend.Models.Item>
    <div class="container p-3">
        <div class="row pt-4">
            <h2 class="text-primary">
                Borrowed items list
            </h2>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                <th> Item name </th>
                <th> Borrower </th>
                <th> Lender </th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.ItemName </td>
                            <td> @item.Borrower </td>
                            <td> @item.BorrLender </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
